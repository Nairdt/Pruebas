{{#partial "contenido"}}
<main
        style="display: flex; margin-top: 3rem; flex-direction: column; justify-content: center; align-items: center;">
    <h1>COMUNIDADES ACTIVAS</h1>
    <table id="customers" style="margin-bottom: 5rem; width: 80%; align-self: center; margin-top: 3rem;">
        <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Cantidad miembros</th>
            <th></th>
        </tr>

        {{#each comunidades}}
            <tr>
                <td>{{this.nombre}}</td>
                <td>{{this.problematica}}</td>
                <td>{{this.cantidadMiembros}}</td>
                <td>
                    <form method="POST" action="/comunidades/{{this.id_comunidad}}/unirse/{{id_usuario}}">
                    <a class="btn btn-success" >Unirse</a>
                    </form>
                </td>
            </tr>
        {{/each}}
    </table>
</main>


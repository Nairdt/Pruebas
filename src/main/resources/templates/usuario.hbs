{{#partial "contenido"}}
    <main class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4">Editar usuario</h1>
                <form method="POST" action="/usuarios/{{usuario.id_usuario}}">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input name="nombre" type="text" class="form-control" id="inputUsername" value="{{usuario.nombre}}">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input name="email" type="email" class="form-control" id="inputMail" value="{{usuario.mail}}">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Nueva contraseña</label>
                        <input name="password" type="password" class="form-control" id="inputPassword" value="">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Confirmar nueva contraseña</label>
                        <input name="password" type="password" class="form-control" id="inputRepeatPassword" value="">
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="/usuarios/" class="btn btn-danger">Volver</a>
                        <button id="guardarUsuario" class="btn btn-primary">Confirmar cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer></footer>
    <script>
        $(document).ready(function () {
            $('#guardarUsuario').on('click', () => {
                $("form").submit();
            });

            $("form").on("submit", (e) => {
                if($("#inputPassword").val() !== $("#inputRepeatPassword").val()
                        || $("#inputUsername").val().length <= 0
                        || $("#inputMail").val().length <= 0)
                    e.preventDefault();
            }) ;
        });
    </script>
{{/partial}}
{{>templates/layoutBase rolUsuario=RolUsuario}}

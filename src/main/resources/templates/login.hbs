<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log- in</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <link href="/css/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <header></header>
    <main class="mainRegistroLogin">
        <div class="divCajaRegistro">
            <div id="login" style="display: block;">
                <h1 class="mt-3">INICIAR SESIÓN</h1>
                <form method="POST" id="formLogin">
                    <div class="mb-3">
                        <label for="inputMail" class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" id="inputMail">
                    </div>
                    <div class="mb-4">
                        <label for="inputPassword" class="form-label">Contraseña</label>
                        <input type="password" name="password" class="form-control" id="inputPassword">
                    </div>
                    <div class="mb-4" id="msgError">
                    </div>
                </form>
                <button id="btnLogin" class=" mb-5 btn btn-primary">Entrar</button>
            </div>
        </div>
    </main>

    <footer></footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
    <script
            src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous">
    </script>
    <script>
        var urlLogin = '/login';
        $(document).ready( function() {
           $('#btnLogin').on('click', function() {
               var formData = new FormData();
               formData.append('email', $('#inputMail').val()); // Use .val() to get the input value
               formData.append('password', $('#inputPassword').val());

               $.ajax({
                   type: "POST",
                   url: urlLogin,
                   data: formData,
                   dataType:'text',
                   processData: false,
                   contentType: false,
                   success: function(data) {
                       if(data != undefined) {
                           if(data=="OK") {
                               window.location.href = '/menu';
                               return;
                           }
                           $('#msgError').show().text(data);
                           setTimeout(()=> {
                               $('#msgError').fadeOut('slow','linear',()=> {
                                   $('#msgError').text('');}
                               );
                           }, 5000);
                       }
                   }
               });
           });
        });
    </script>
</body>

</html>